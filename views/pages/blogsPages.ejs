    <div class="container">
      <!-- banner -->

      <header class="default-header">
        <div class="container">
          <button class="btn btn-sm btn-primary">
            <a href="/blogs">Back</a>
          </button>
          <div class="row">
            <div class="col-lg-8 col-md-8">
              <div class="default-header-text-holder">
                <h1 class="common">Welcome To My Blog</h1>
                <p class="textmedium">
                  Here You will Learn About How to Start Coding , Learning any
                  new Technology and details regarding New Technologies, Web
                  devlopment, Full Stack Devlopment and also Interview
                  Preparation
                </p>
              </div>
            </div>
          </div>
        </div>
      </header>
      <!-- banner -->

      <!-- body content -->
      <section class="default-body-content">
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-8">
              <img
                src="<%=postImage%>"
                class="img-fluid rounded mb-3"
                alt="Something"
              />

              <div class="content">
                <h2 class="common"><%=requestedtitle%></h2>
                <p class="textmedium"><%=postContent%></p>
              </div>

              <div class="card">
                <div class="card-body">
                  <h6 class="card-title">You comment</h6>
                  <form>
                    <div class="mb-3">
                      <input
                        type="text"
                        class="form-control form-control-sm"
                        placeholder="Your name"
                      />
                    </div>
                    <div class="mb-3">
                      <input
                        type="email"
                        class="form-control form-control-sm"
                        placeholder="Your Email ID"
                      />
                    </div>
                    <div class="mb-3">
                      <textarea
                        class="form-control form-control-sm"
                        rows="6"
                        placeholder="Your Comment"
                      ></textarea>
                    </div>
                    <div class="mb-3">
                      <input
                        type="submit"
                        class="btn btn-sm btn-primary"
                        value="Post Comment"
                      />
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <div class="col-lg-4 col-md-4">
              <aside class="card text-white bg-primary mb-3">
                <div class="card-body">
                  <h4 class="card-title">Subscribe for News Letters</h4>
                  <p class="card-text">Get latest updates and freebies</p>
                  <form>
                    <div class="mb-3">
                      <input
                        type="email"
                        class="form-control form-control-sm"
                        placeholder="Email ID"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <input
                        type="submit"
                        class="btn btn-block btn-sm btn-warning"
                        value="Subscribe Now!"
                      />
                    </div>
                  </form>
                </div>
              </aside>

              <ul class="list-group mb-3">
                <li class="list-group-item active">Archives</li>
                <li class="list-group-item"><a href="/blogs"> 2021</a></li>
              </ul>

              <ul class="list-group mb-3">
                <li class="list-group-item active">Recent Posts</li>
                <li class="list-group-item">
                  <a href="/blogs">Machine Learning</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </section>
      <!-- body content -->

